<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".JoinRoomActivity"
    android:background="@color/lighty_blue">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join room"
        android:textSize="40dp"
        android:fontFamily="casual"/>
    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:scaleType="fitCenter"
        app:lottie_rawRes="@raw/join_room"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:hint="Enter Code"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="@color/grey"
        android:inputType="number"
        android:width="150dp"
        android:background="@drawable/editable_bg"
        android:id="@+id/roomcode"/>

    <android.widget.Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join"
        android:layout_marginTop="15dp"
        android:background="@drawable/gradient1"
        android:theme="@style/Theme.Bingo"
        style="@style/Theme.Bingo"
        android:id="@+id/join"/>


</LinearLayout>